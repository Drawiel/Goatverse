        <Viewbox
            Name="ViewboxFriends"
            Visibility="Visible"
            Grid.Column="0"
            Grid.Row="0" 
            Grid.ColumnSpan="2" 
            Margin="0,-10,546,1" 
            Grid.RowSpan="6"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Left"
            >
            <materialDesign:Card>
                <TabControl
                materialDesign:ColorZoneAssist.Mode="Standard"
                materialDesign:ElevationAssist.Elevation="Dp0"
                Style="{StaticResource MaterialDesignNavigationRailTabControl}"
                TabStripPlacement="Right">

                    <!-- Estilo para hacer más pequeña la zona de encabezado -->
                    <TabControl.Resources>
                        <Style 
                            TargetType="TabItem">
                            <Setter Property="Width" 
                                    Value="80"/>
                            <!-- Ajusta este valor según el tamaño deseado -->
                        </Style>
                    </TabControl.Resources>

                    <TabItem>
                        <TabItem.Header>
                            <StackPanel 
                            Width="auto" 
                            Height="auto">
                                <materialDesign:PackIcon
                                Width="15"
                                    Height="15"
                                    HorizontalAlignment="Center"
                                    Kind="AccountGroup" />
                                <TextBlock
                                        HorizontalAlignment="Center"
                                        Text="Amigos" 
                                        FontSize="12"/>
                            </StackPanel>
                        </TabItem.Header>
                        <Grid 
                            Height="1080"
                            Width="400" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="90*"/>
                                <RowDefinition Height="1200*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150*"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:ColorZone
                                Grid.Column="0"
                                Grid.Row="0"
                                Padding="16"
                                Mode="PrimaryMid">
                                <DockPanel>
                                    <StackPanel
                                        materialDesign:RippleAssist.IsCentered="True"
                                        Orientation="Horizontal">
                                        
                                        <materialDesign:ColorZone
                                            Margin="16,0,0,0"
                                            Padding="8,4,8,4"
                                            Panel.ZIndex="1"
                                            materialDesign:ElevationAssist.Elevation="Dp2"
                                            CornerRadius="2"
                                            Mode="Standard" Width="318">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    
                                                    <ColumnDefinition Width="30" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Border>
                                                    <materialDesign:PackIcon
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Center"
                                                        Kind="Search"
                                                        Opacity=".56" />
                                                </Border>
                                                <TextBox
                                                    Grid.Column="1"
                                                    MinWidth="200"
                                                    Margin="8,0,0,0"
                                                    VerticalAlignment="Center"
                                                    materialDesign:HintAssist.Hint="Build a search bar"
                                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                    BorderThickness="0" />
                                                
                                            </Grid>
                                        </materialDesign:ColorZone>
                                        <Button
                                            Margin="8,0,0,0"
                                            Panel.ZIndex="0"
                                            Style="{StaticResource MaterialDesignToolForegroundButton}">
                                            <materialDesign:PackIcon
                                                Kind="Search" />
                                        </Button>
                                    </StackPanel>
                                </DockPanel>
                            </materialDesign:ColorZone>


                        </Grid>
                    </TabItem>

                    <TabItem>
                        <TabItem.Header>
                            <StackPanel 
                                Width="auto" 
                                Height="auto">
                                <materialDesign:PackIcon
                                    Width="15"
                                    Height="15"
                                    HorizontalAlignment="Center"
                                    Kind="AccountPlus" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        Text="Agregar" 
                                        FontSize="12"/>
                            </StackPanel>
                        </TabItem.Header>
                        <Grid 
                            Height="1080"
                            Width="400" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="90*"/>
                                <RowDefinition Height="1200*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150*"/>
                            </Grid.ColumnDefinitions>

                            <materialDesign:ColorZone
                                Grid.Column="0"
                                Grid.Row="0"
                                Padding="16"
                                Mode="PrimaryMid">
                                <DockPanel>
                                    <StackPanel
                                        materialDesign:RippleAssist.IsCentered="True"
                                        Orientation="Horizontal">
                                        <materialDesign:ColorZone
                                            Margin="16,0,0,0"
                                            Padding="8,4,8,4"
                                            Panel.ZIndex="1"
                                            materialDesign:ElevationAssist.Elevation="Dp2"
                                            CornerRadius="2"
                                            Mode="Standard" Width="318">
                                            <Grid>
                                                <Grid.ColumnDefinitions>

                                                    <ColumnDefinition Width="30" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <Border>
                                                    <materialDesign:PackIcon
                                                        VerticalAlignment="Center"
                                                        HorizontalAlignment="Center"
                                                        Kind="Search"
                                                        Opacity=".56" />
                                                </Border>
                                                <TextBox
                                                    Grid.Column="1"
                                                    MinWidth="200"
                                                    Margin="8,0,0,0"
                                                    VerticalAlignment="Center"
                                                    materialDesign:HintAssist.Hint="Build a search bar"
                                                    materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                                    BorderThickness="0" />
                                            </Grid>
                                        </materialDesign:ColorZone>
                                        <Button
                                            Margin="8,0,0,0"
                                            Panel.ZIndex="0"
                                            Style="{StaticResource MaterialDesignToolForegroundButton}">
                                            <materialDesign:PackIcon
                                                Kind="AccountPlus" />
                                        </Button>
                                    </StackPanel>
                                </DockPanel>
                            </materialDesign:ColorZone>
                        </Grid>
                    </TabItem>

                    <TabItem>
                        <TabItem.Header>
                            <StackPanel 
                                Width="auto" 
                                Height="auto">
                                <materialDesign:PackIcon
                                    Width="15"
                                    Height="15"
                                    HorizontalAlignment="Center"
                                    Kind="AccountAlert" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        Text="Solicitudes" 
                                        FontSize="12" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid 
                            Height="1080"
                            Width="400" />
                    </TabItem>

                    <TabItem>
                        <TabItem.Header>
                            <StackPanel 
                                Width="auto" 
                                Height="auto">
                                <materialDesign:PackIcon
                                    Width="15"
                                    Height="15"
                                    HorizontalAlignment="Center"
                                    Kind="AccountLock" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        Text="Bloqueados" 
                                        FontSize="12" />
                            </StackPanel>
                        </TabItem.Header>
                        <Grid 
                            Height="1080"
                            Width="400" />
                    </TabItem>
                </TabControl>
            </materialDesign:Card>

        </Viewbox>
        
        <Viewbox
        Name="ViewboxJoinLobby"
        Visibility="Collapsed"
        Grid.Column="1"
        Grid.Row="3" 
        Grid.ColumnSpan="1" 
        Margin="546,0,0,1" 
        Grid.RowSpan="1"
        VerticalAlignment="Stretch"
        HorizontalAlignment="Stretch"
        >
            <Grid
            Background="White"
            Width="200"
            Height="151">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150*"/>
                    
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/>
                    <RowDefinition Height="30*"/>
                    <RowDefinition Height="10*"/>
                </Grid.RowDefinitions>

                <!--Top section-->
                <Viewbox 
                  Grid.Column="1" 
                 Grid.Row="0" 
                 Margin="0">
                    <Border 
                        CornerRadius="0 20 20 0">
                        <TextBlock 
                            Text="Unirse a partida" 
                            FontSize="1" 
                            FontWeight="Bold" 
                            Margin="0,0,0,0"/>
                    </Border>
                </Viewbox>

                <Viewbox
                    Grid.Column="1"
                    Grid.Row="1"
                    Margin="10,20,10,20"
                    >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*"/>
                            <ColumnDefinition Width="50*"/>

                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid>

                            <StackPanel
                                Grid.Column="1">
                                <CheckBox
                                Visibility="Hidden" />
                                <TextBox
                                Name="txtBoxLobbyCodeJoin"
                                VerticalAlignment="Top"
                                materialDesign:HintAssist.Hint="{x:Static language:Lang.globalLobbyCode}"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}">         
                                    <TextBox.Text>
                                        <Binding
                                        Path="Text2"
                                        UpdateSourceTrigger="PropertyChanged">          

                                        </Binding>
                                    </TextBox.Text>
                                </TextBox>
                            </StackPanel>

                        </Grid>
                    </Grid>


                </Viewbox>

                <!--Botón unirse-->
                <Viewbox 
                Grid.Column="1" 
                Grid.Row="3" 
                Margin="0"
                HorizontalAlignment="Right">
                    
                    <Border 
                    CornerRadius="0 20 20 0">
                        <Button
                        HorizontalAlignment="Right"
                        Margin="0"
                        Background="LightBlue"
                        BorderBrush="Black"
                        BorderThickness="2" 
                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                        Style="{StaticResource MaterialDesignFloatingActionButton}"
                        ToolTip="MaterialDesignFloatingActionButton"
                        Click="BtnClickJoinLobbyWithCode">
                            <materialDesign:PackIcon Kind="ArrowRight" Width="40" Height="40" Margin="5" />
                        </Button>
                    </Border>
                </Viewbox>
            </Grid>

        </Viewbox>


    </Grid>

</Window>
