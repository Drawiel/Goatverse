<UserControl x:Class="Goatverse.Windows.UserControllers.ChatMessage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Goatverse.Windows.UserControllers"
             mc:Ignorable="d" 
             Name="chatMessage">
    <Border CornerRadius="0 10 10 10" Background="{Binding ElementName=messageChat, Path=Color}" Padding="10 7" HorizontalAlignment="Left" Margin="45 5 0 0">
        <TextBlock Text="{Binding ElementName=messageChat, Path=Message}" FontSize="10" Foreground="#ffffff" VerticalAlignment="Center" Margin="3 0 3 2"
                   Background="#ff82a3"/>

    </Border>
</UserControl>
