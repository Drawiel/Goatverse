<Window x:Class="Goatverse.Windows.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Goatverse.Windows"
        mc:Ignorable="d"
        Title="Start" Height="1080" Width="1920" WindowStyle="None" ResizeMode="NoResize" WindowState="Maximized">

    <Window.Background>
        <ImageBrush ImageSource="pack://application:,,,/Multimedia/start.png"/>
    </Window.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="1160*"/>
            <ColumnDefinition Width="600*"/>
            <ColumnDefinition Width="80*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="85*"/>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="85*"/>
        </Grid.RowDefinitions>

        <Viewbox Grid.Column="2" Grid.Row="3">
            <Grid Width="600" Height="545">

                <Grid.RowDefinitions>
                    <RowDefinition Height="145*"/>
                    <RowDefinition Height="145*"/>
                    <RowDefinition Height="145*"/>
                    <RowDefinition Height="110*"/>
                </Grid.RowDefinitions>

                <Button Grid.Row="0"                          
                        Content="Crear partida"
                        Width="400" 
                        Height="90" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch"
                        Margin="40 10"
                        Background="#1C5E4A" 
                        BorderBrush="White" 
                        Foreground="White"
                        FontSize="30" Click="Button_Click">
                </Button>

                <Button Grid.Row="1"        
                        Content="Unirse a partida"
                        Width="400" 
                        Height="90" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch"
                        Margin="40 10"
                        Background="#1C5E4A" 
                        BorderBrush="White" 
                        Foreground="White"
                        FontSize="30">
                </Button>

                <Button Grid.Row="2"
                        Content="Mazo de cartas"
                        Width="400" 
                        Height="90" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch"
                        Margin="40 10"
                        Background="#1C5E4A" 
                        BorderBrush="White" 
                        Foreground="White"
                        FontSize="30">
                </Button>

                <Button Grid.Row="3" 
                        Content="Configuración"
                        Width="400" 
                        Height="90" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch"
                        Margin="40 10"
                        Background="#1C5E4A" 
                        BorderBrush="White" 
                        Foreground="White"
                        FontSize="30">
                </Button>
            </Grid>

        </Viewbox>

        <Viewbox Grid.Column="0" Grid.Row="0" Margin="0">
            <Border CornerRadius="0 20 20 0">
                <Button
                    Margin="10"
                    Background="LightBlue"
                    BorderBrush="Black"
                    BorderThickness="2" 
                    IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                    Style="{StaticResource MaterialDesignFloatingActionButton}"
                    ToolTip="MaterialDesignFloatingActionButton">
                    <materialDesign:PackIcon Kind="AccountSupervisor" Width="40" Height="40" Margin="5" />
                </Button>
            </Border>
        </Viewbox>

        <Viewbox
            Grid.Column="0"
            Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,546,1" Grid.RowSpan="6">
            <Grid
                Background="White"
                Width="200"
                Height="308">
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150*"/>
                    <ColumnDefinition Width="30*"/>
                </Grid.ColumnDefinitions>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                
                <!--Botón añadir-->
                <Viewbox Grid.Column="1" Grid.Row="0" Margin="0">
                    <Border CornerRadius="0 20 20 0">
                        <Button
                        Margin="10"
                        Background="LightBlue"
                        BorderBrush="Black"
                        BorderThickness="2" 
                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                        Style="{StaticResource MaterialDesignFloatingActionButton}"
                        ToolTip="MaterialDesignFloatingActionButton">
                            <materialDesign:PackIcon Kind="AccountPlus" />
                        </Button>
                    </Border>
                </Viewbox>

                

                <!--Botón regresar-->
                <Viewbox Grid.Column="1" Grid.Row="3" Margin="0">
                    <Border CornerRadius="0 20 20 0">
                        <Button
                        Margin="10"
                        Background="LightBlue"
                        BorderBrush="Black"
                        BorderThickness="2" 
                        IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                        Style="{StaticResource MaterialDesignFloatingActionButton}"
                        ToolTip="MaterialDesignFloatingActionButton">
                            <materialDesign:PackIcon Kind="ArrowLeft" Width="40" Height="40" Margin="5" />
                        </Button>
                    </Border>
                </Viewbox>
            </Grid>
            
        </Viewbox>


    </Grid>

</Window>
